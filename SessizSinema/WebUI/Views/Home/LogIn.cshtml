<div class="d-flex justify-content-center">
    <div class="col-md-4 text-center">
        <div class="form-signin" @*asp-action="LogIn"*@>
            @*<img class="mb-4" src="~/img/indir.jpg" alt="" width="72" height="72">*@
            <h1 class="h3 mb-3 font-weight-normal">Lütfen Giriş Yapın</h1>
            <div class="form-group">
                <label @*asp-for="Email*@ class="sr-only">Mail Adresi</label>
                <input @*asp-for="Email"*@ type="email" id="inputEmail" class="form-control" placeholder="Mail Adresi" required autofocus>
            </div>
            <div class="form-group">
                <label @*asp-for="Password"*@ class="sr-only">Şifre</label>
                <input @*asp-for="Password"*@ type="password" id="inputPassword" class="form-control" placeholder="Şifre" required>
            </div>
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Sign in" />
        </div>
        @*@if (TempData["Message"] != null)
            {
                <div style="margin-top:10px" class="alert alert-danger" role="alert">
                    @TempData["Message"]
                </div>
            }*@
    </div>
</div>